global:
  logging:
    - type: syslog
      format: human
      level: warn

jobs:
  - type: sink
    name: "sink"
    root_fs: "tank"
    serve:
      type: tls
      listen: ":{{port}}"
      ca: {{caCertFile}}
      cert: {{certFile}}
      key: {{keyFile}}
      client_cns:
        - "sachi.machine.mado.moe"
    recv:
      placeholder:
        encryption: inherit
