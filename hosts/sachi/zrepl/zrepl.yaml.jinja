global:
  logging:
    # use syslog instead of stdout because it makes journald happy
    - type: syslog
      format: human
      level: warn

jobs:
  - type: push
    name: "push"
    filesystems: {
      "main<": true,
      "main": false,
      # Backups don't need auto snapshots. They are pushed via wakeup viasystemd timer.
      "main/backup<": false,
      "main/backup-old<": false,
      "main/backup-clone-for-mount<": false,
      "main/storage/torrent<": false,
      "main/storage/resources<": false,
      "main/credentials<": false,
    }
    connect:
      type: tls
      address: "yumiko.machine.15cm.net:38888"
      server_cn: "yumiko.machine.15cm.net"
      ca: {{caCertPath}}
      cert: {{certPath}}
      key: {{keyPath}}
    snapshotting:
      type: periodic
      prefix: zrepl_
      interval: 1h
    send:
      encrypted: true
      compressed: true
    pruning:
      keep_sender:
        - type: not_replicated
        - type: last_n
          count: 10
        - type: grid
          grid: 24x1h | 35x1d | 6x30d
          regex: "^zrepl_.*"
        - type: regex
          regex: "^manual_.*"
      keep_receiver:
        - type: grid
          grid: 24x1h | 14x1d | 1x30d
          regex: "^zrepl_.*"
        - type: regex
          regex: "^manual_.*"
        - type: regex
          regex: "^local_zrepl_.*"

  - type: push
    name: "push_no_snapshot"
    filesystems: {
      "main/backup/kazuki.machine.mado.moe/rpool<": true,
      "main/backup/asako.machine.mado.moe/rpool<": true,
    }
    connect:
      type: tls
      address: "yumiko.machine.15cm.net:38888"
      server_cn: "yumiko.machine.15cm.net"
      ca: {{caCertPath}}
      cert: {{certPath}}
      key: {{keyPath}}
    snapshotting:
      type: manual
    send:
      encrypted: true
      compressed: true
    pruning:
      keep_sender:
        - type: regex
          regex: ".*"
      keep_receiver:
        - type: grid
          grid: 24x1h | 35x1d | 6x30d
          regex: "^zrepl_.*"
        - type: regex
          regex: "^manual_.*"
        - type: regex
          regex: "^local_zrepl_.*"

  - type: snap
    name: "local_snap"
    filesystems: {
      "main/storage/torrent<": true,
      "main/storage/resources<": true,
      "main/credentials<": true,
    }
    snapshotting:
      type: periodic
      prefix: local_zrepl_
      interval: 1h
    pruning:
      keep:
        - type: last_n
          count: 10
        - type: grid
          grid: 24x1h | 35x1d | 6x30d
          regex: "^local_zrepl_.*"
        - type: regex
          regex: "^manual_.*"
        - type: regex
          regex: "^zrepl_.*"

  - type: sink
    name: "sink"
    root_fs: "main/backup"
    serve:
      type: tls
      listen: ":38888"
      ca: {{caCertPath}}
      cert: {{certPath}}
      key: {{keyPath}}
      client_cns:
        - "kazuki.machine.mado.moe"
        - "asako.machine.mado.moe"
    recv:
      placeholder:
        encryption: inherit
