export DISPLAY=:0
export GTK2_RC_FILES=$HOME/.gtkrc-2.0
export XCURSOR_PATH=~/.icons:~/.nix-profile/share/icons/:$XCURSOR_PATH

# Qt
export QT_QPA_PLATFORMTHEME=qt5ct
{%if hostname == "kazuki"%}
export QT_SCREEN_SCALE_FACTORS=2
{%elif hostname == "asako"%}
export QT_SCREEN_SCALE_FACTORS=1.25
{%endif%}
export QT_AUTO_SCREEN_SCALE_FACTOR=1

# Gtk
{%if hostname == "kazuki"%}
export GDK_SCALE=2
export GDK_DPI_SCALE=0.5
{%elif hostname == "asako"%}
export GDK_SCALE=1.25
export GDK_DPI_SCALE=0.8
{%endif%}

# Fix systemctl --user
export XDG_RUNTIME_DIR=/run/user/`id -u`

# Alacritty hdpi
{%if hostname == "kazuki"%}
export WINIT_HIDPI_FACTOR=2
{%elif hostname == "asako"%}
export WINIT_HIDPI_FACTOR=1.25
{%endif%}

{%if hostname == "asako"%}
# Disable trackpad
xinput disable "ELAN06A0:00 04F3:3231 Touchpad"
# TrackPoint flat acceleration 
xinput set-prop "TPPS/2 Elan TrackPoint" "libinput Accel Profile Enabled" 0, 1
{%endif%}
